{% extends 'layout.twig' %}

{% block body %}
    <div class="uk-container">
        <h1 class="uk-text-center">Bienvenue</h1>
        <form action="/search/actor" method="get">

            <div class="uk-margin">
                <span uk-search-icon></span><input class="uk-input uk-form-width-large" type="search" name ='query' placeholder="Chercher un acteur">
            </div>
            <div class="uk-margin uk-animation-toggle" tabindex="0"">
                <input type="Submit" class="uk-button uk-button-primary uk-animation-slide-left" value="Rechercher">
            </div>
        </form>
        {# {% if movie != null %}#}
            {% for actor in actors %}

                <a href="/actor/{{actor.id}}">
                    <h3>{{actor.name}}</h3>
                
                    <p> <img data-src="https://image.tmdb.org/t/p/original{{actor.profile_path}}" width="150 px"  alt="{{movie.title}}" uk-img> </p>
                </a>
                <hr class="uk-divider-icon">
            {% else %}
                <h3>Aucun acteur n'a été trouvé</h3>
            {% endfor %}
        {#{% else %}
            <h3>Faites une recherche!</h3>
        {% endif %}#}
    </div>


{% endblock %}